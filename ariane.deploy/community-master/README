## Create all services
docker-compose up -d --no-recreate

## Stop all services
docker-compose stop

## Start all services
docker-compose start

## Only start backends
docker-compose up -d idmdb directorydb rabbitmq

## Start ariane with a shell for debugging purposes
docker-compose run --no-deps --rm ariane /bin/bash

## Start ariane with a shell, without compose
docker run -ti \
    -e ARIANE_DIRECTORY_HOST=directorydb \
    -e ARIANE_IDM_HOST=idmdb \
    -e ARIANE_RABBITMQ_HOST=rabbitmq \
    -p 6969:6969
    --link communitymaster_rabbitmq_1:rabbitmq \
    --link communitymaster_idmdb_1:idmdb \
    --link communitymaster_directorydb_1:directorydb \
    echinopsii/ariane.community:master \
    /bin/bash
